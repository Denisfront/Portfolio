section.section-form
    .section-form__wrapper
        .container
            h3.section-form__title.title.title--medium Связаться со мной
            form.form
                .form__box
                    .form__row
                        label.form__block
                            .form__block-title Введите ваше имя
                            input.form__input(type="text")
                            +icon('user', 'form__input-icon')
                        label.form__block
                            .form__block-title Введите ваш email
                            input.form__input(type="email")
                            +icon('envelope', 'form__input-icon')
                    .form__row
                        label.form__block
                            .form__block-title Сообщение к письму
                            textarea.form__input.form__input--textarea
                            +icon('message', 'form__input-icon')
                    input.btn.btn--form(type="submit", value="Отправить")


