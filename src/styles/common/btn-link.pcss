.btn-link {
    color: $links-color;
    font-size: 18px;
    font-weight: 700;
    text-decoration: none;
    padding-left: 39px;
    position: relative;

    &:before {
        content: '';
        position: absolute;
        background: svg-load('link.svg', fill=$links-color, width=100%, height=100%);
        width: 15px;
        height: 15px;
        left: 0;
        transform: translateY(25%);
    }

    &:hover {
        border-bottom: 1px solid #7793e1;
    }
}