.tags {
    display: flex;
    color: $text-color-opacity7;
    font-size: 15px;
    font-weight: 600;

    @include desktop {
        flex-wrap: wrap;
    }
}

.tags__item {
    padding: 11px 20px;
    background-color: $bg-color;
    border-radius: 50px;
    margin-right: 15px;
    margin-bottom: 10px;

    &:last-child {
        margin-right: 0;
        margin-bottom: 0;
    }
}