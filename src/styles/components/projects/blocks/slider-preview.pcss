
.slider-preview__item {
    max-width: 178px;
    transition: .3s;
    
    &.active {
        outline: 3px solid #dc9322;
    }
    &:hover {
        transform: translateX(-30px);
        position: relative;

        &:after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(85, 0, 242, 0.3);
        }
    }
}

