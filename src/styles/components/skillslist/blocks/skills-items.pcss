.skills-ltems {
    display: flex;
    flex-wrap: wrap;

    @include phones {
        justify-content: center;
    }
}

.skills-items__item {
    margin-right: 53px;

    @include tablets {
        margin-right: 27px;
    }

    &:last-child {
        margin-right: 0;
    }

    @include phones {
        &:nth-child(odd) {
            margin-right: 10px;
        }

        &:nth-child(even) {
            margin-right: 0;
        }
    }
}