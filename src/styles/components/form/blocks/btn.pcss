.btn {
    border: none;
    cursor: pointer;
    outline: none;
    padding: 30px 120px;
    background-image: linear-gradient(to right, #9300e8 0%, #4a00ed 100%);
    text-transform: uppercase;
    font-size: 18px;
    color: $white;
    border-radius: 39px 3px;

    @include tablets {
        padding: 34px 135px;
    }
}